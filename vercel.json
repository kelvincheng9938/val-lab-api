{
  "version": 2,
  "builds": [{ "src": "api/**/*.js", "use": "@vercel/node" }],
  "routes": [
    { "src": "/v1/valuation/(.*)", "dest": "/api/valuation.js" },
    { "src": "/v1/peers/(.*)", "dest": "/api/peers.js" },
    { "src": "/v1/segments/(.*)", "dest": "/api/segments.js" },
    { "src": "/v1/market-snapshot", "dest": "/api/market.js" },
    { "src": "/v1/news", "dest": "/api/news.js" },
    { "src": "/health", "dest": "/api/health.js" }
  ],
  "crons": [
    { "path": "/api/cron/warm.js", "schedule": "0 * * * *" }
  ]
}
